<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<!-- The Basics -->
	<modelVersion>4.0.0</modelVersion>
	<groupId>de.m0ep.moodle</groupId>
	<artifactId>moodlews_ksoap2</artifactId>
	<version>0.1</version>
	<dependencies>
	   <dependency>
            <groupId>net.patrickpollet</groupId>
            <artifactId>moodlews_ksoap2</artifactId>
            <version>1.8.5</version>
        </dependency>
		<dependency>
			<groupId>com.google.code.ksoap2-android</groupId>
			<artifactId>ksoap2-j2se</artifactId>
			<version>3.0.0-RC.4</version>
		</dependency>
	</dependencies>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>

	<!-- More Project Information -->
	<name>moodlews_ksoap</name>
	<description>Generated ksoap2 classes for the MoosleWS Moodle webservice plugin</description>
	<licenses>
		<license>
			<name>The MIT License</name>
			<url>http://fm.mit-license.org/</url>
		</license>
	</licenses>
	<developers>
		<developer>
			<id>m0ep</id>
			<name>Florian MÃ¼ller</name>
			<email>florian.mueller@m0ep.de</email>
			<url>http://m0ep.de</url>
			<roles>
				<role>architect</role>
				<role>developer</role>
			</roles>
			<timezone>+1</timezone>
			<properties>
				<picUrl>https://gravatar.com/avatar/a5234d4086bb18020d74ae5a3018ef1b.jpg</picUrl>
			</properties>
		</developer>
	</developers>

	<!-- Build Settings -->
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.3.2</version>
				<configuration>
					<source>1.7</source>
					<target>1.7</target>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<!-- Environment Settings -->
	<repositories>
		<repository>
			<id>googlecode-ksoap2-android</id>
			<name>googlecode-ksoap2-android</name>
			<url>http://ksoap2-android.googlecode.com/svn/m2-repo</url>
		</repository>
		<repository>
			<id>moodlews_ksaop_repo</id>
			<url>file://${basedir}/lib/repo/</url>
		</repository>
	</repositories>

</project>